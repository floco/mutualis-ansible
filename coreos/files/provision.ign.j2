{
  "ignition": {
    "version": "2.0.0",
    "config": {}
  },
  "storage": {
    "files": [
      {
        "filesystem": "root",
        "path": "/etc/hostname",
        "contents": {
          "source": "data:,{{vmname}}",
          "verification": {}
        },
        "user": {},
        "group": {}
      }
    ]
  },
  "systemd": {},
  "networkd": {
    "units": [{
      "name": "00-eth0.network",
      "contents": "[Match]\nName=eth0\n\n[Network]\nDNS={{gateway}}\nAddress={{cidr}}\nGateway={{gateway}}"
    }]
  },
  "passwd": {
    "users": [
      {
        "name": "core",
	      "passwordHash":"{{coreos_passwd_hash}}",
        "sshAuthorizedKeys": [
          "{{coreos_ssh_key}}"
        ],
	"create": {
          "groups": [
            "sudo",
            "docker"
          ]
	}
      }
    ]
  }
}
