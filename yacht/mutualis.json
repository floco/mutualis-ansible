[
  {
    "type": 1,
    "title": "Fava",
    "name": "fava",
    "description": "Web Interface for beancount accounting",
    "categories": ["Finance"],
    "platform": "linux",
    "logo": "https://beancount.github.io/fava/_static/logo.png",
    "image": "grostim/fava-docker:latest",
    "restart_policy": "unless-stopped",
    "env": [
      {
        "name": "PUID",
        "label": "PUID",
        "default": "!PUID"
      },
      {
        "name": "PGID",
        "label": "PGID",
        "default": "!PGID"
      },
      {
        "name": "BEANCOUNT_FILE",
        "label": "BEANCOUNT_FILE",
        "default": "!BEANCOUNT_FILE"
      }
    ],
    "ports": [
      {
        "WebUI": "8002:5000/tcp"
      }
    ],
    "volumes": [
      {
        "container": "/root",
        "bind": "!config/Fava"
      }
    ]
  }
]
